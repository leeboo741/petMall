.pet-type-tab-box{
  width: 100%;
  height: 80rpx;
}

.pet-type-tab{
  width: 100%;
  height: 80rpx;
}

.pet-type-list{
  display: flex;
  flex-direction: column;
}

.pet-type-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  background: white;
}

.pet-type-input{
  margin: 10rpx 20rpx;
  border: 1rpx solid lightgray;
  border-radius: 8rpx;
  height: 50rpx;
  line-height: 50rpx;
  width: 100%;
  padding: 8rpx 10rpx;
}

.pet-type-item-image{
  margin: 25rpx 40rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 20rpx;
}

.pet-type-item-title{
  font-size: 28rpx;
  color: lightgray;
}