/* components/postMaker/index.wxss */
.poster-box{
  width: 100%;
  background: rgba(0,0,0,0.7);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.poster{
  width: 70%;
  height: 70%;
  margin-top: 50rpx;
  z-index: 10;
}

.poster-save-button{
  display: block;
  width: 70%;
  height: 80rpx;
  padding: 0rpx 40rpx;
  line-height: 80rpx;
  text-align: center;
  position: fixed;
  bottom: 50rpx;
  left: 0;
  right: 0;
  margin-left: auto;
  margin-right: auto;
  background: #ffe200;
  color: #333;
  font-size: 32rpx;
  border-radius: 44rpx;
}