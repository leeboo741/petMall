.comment-commentbody {
    width: 100%;
    background: #F6F8FA;
    box-sizing: border-box;
}

.comment-line {
    width: 100%;
    height: 24rpx;
    background: #F6F8FA;
}

.comment-commentitem {
    width: 100%;
    box-sizing: border-box;
    padding: 40rpx;
    background: #FFFFFF;
}

.comment-commentitem .comment-top {
    width: 100%;
}

.comment-commentitem .comment-top:after {
    content: '';
    display: block;
    clear: both;
}

.comment-top-left {
    float: left;
    display: inline-block;
}

.comment-top-left:after {
    content: '';
    display: block;
    clear: both;
}

.comment-headimg {
    display: inline-block;
    width: 60rpx!important;
    height: 60rpx!important;
    margin-right: 16rpx;
    float: left;
}

.comment-headimg image {
    width: 100%;
    height: 100%;
    border-radius: 21rpx;
}

.comment-namelevel {
    float: left;
    display: inline-block;
}

.comment-name {
    font-family: PingFangSC-Medium;
    font-size: 24rpx;
    color: #717985;
    letter-spacing: 0;
    text-align: left;
}

.comment-commentlecel {
    margin-top: 8rpx;
}

.comment-commentlecel:after {
    content: '';
    display: block;
    clear: both;
}

.comment-commentlecel image {
    float: left;
    width: 19.2rpx;
    height: 19.2rpx;
    margin-right: 3.3rpx;
}

.comment-top-right {
    float: right;
    display: inline-block;
    font-family: PingFangSC-Regular;
    font-size: 22rpx;
    color: #9FA7B9;
    letter-spacing: 0;
    text-align: right;
    margin-top: 5rpx;
}

.comment-bottom {
    margin-top: 24rpx;
    box-sizing: border-box;
    padding-left: 76rpx;
}

.comment-bottom .comment-comment {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #002241;
    letter-spacing: 0;
    text-align: justify;
}

.comment-commentimg {
    margin-top: 24rpx;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.comment-commentimg image {
    display: block;
    width: 190rpx;
    height: 190rpx;
    margin-bottom: 12rpx;
}

.comment-tag {
    font-family: PingFangSC-Regular;
    font-size: 22rpx;
    color: rgba(255,58,30,0.50);
    letter-spacing: 0;
}

.comment-tag text {
    margin-right: 20rpx;
}

.comment-bottom-tom {
    margin-top: 24rpx;
    font-family: PingFangSC-Regular;
    font-size: 22rpx;
    color: #9FA7B9;
}

.comment-bottom-tom:after {
    content: '';
    display: block;
    clear: both;
}

.comment-bottom-tom view {
    display: inline-block;
}

.comment-bottom-tom .comment-service {
    float: left;
    width: 200rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.comment-itembtn {
    display: inline-block;
    margin-left: 16rpx;
    float: left;
}

.comment-itembtn image {
    width: 16rpx;
    height: 10rpx;
    position: relative;
    bottom: 5rpx;
    left: 8rpx;
}

.comment-servicedate {
    float: right;
}

.comment-extraItems {
    font-family: PingFangSC-Regular;
    font-size: 22rpx;
    color: #9FA7B9;
    margin-top: 12rpx;
}

.comment-extraItems text {
    margin-right: 32rpx;
}

.comment-reply {
    margin-top: 28rpx;
    box-sizing: border-box;
    padding: 25rpx 20rpx;
    background: #F6F8FA;
}

.comment-reply-top {
    font-family: PingFangSC-Medium;
    font-size: 24rpx;
    color: #717985;
    height: 40rpx;
    line-height: 40rpx;
}

.comment-reply-top::after {
    content: '';
    display: block;
    clear: both;
}

.comment-reply-top image {
    float: left;
    width: 40rpx;
    height: 40rpx;
    margin-right: 16rpx;
}

.comment-reply-bottom {
    margin-top: 14rpx;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #717985;
    text-align: justify;
    position: relative;
}

.comment-reply-bottom::before {
    content: "";
    position: absolute;
    top: -120rpx;
    left: 0;
    width: 0;
    height: 0;
    border: 30rpx solid;
    border-color: transparent transparent #F6F8FA;
    box-sizing: border-box;
}