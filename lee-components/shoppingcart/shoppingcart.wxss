/* components/shoppingcart/shoppingcart.wxss */
.shoppingcart-box{
  z-index: 9999;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.shoppingcart-content{
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  align-items: center; 
  background: white;
}

.shoppingcart-count-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  width: 100%;
  height: 80rpx;
  margin: 10rpx 20rpx;
}

.shoppingcart-count-title{
  font-size: 35rpx;
  color: gray;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.count-button{
  margin-right: 30rpx;
}

.shoppingcart-button{
  width: 100%;
  background: #ee2c2c;
  color: white;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 35rpx;
  letter-spacing: 5rpx;
  font-weight: bold;
}

.mask{
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}