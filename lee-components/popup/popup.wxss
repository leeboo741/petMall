.mask {
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0,0,0,0.7);
}

.popup {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    padding: 30rpx;
    box-sizing: border-box;
}

.popup-content {
    overflow: auto;
}

.popup-close {
    margin-top: 40rpx;
}