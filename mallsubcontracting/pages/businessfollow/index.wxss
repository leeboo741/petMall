/* mallsubcontracting/pages/businessfollow/index.wxss */
.clear{
  clear: both;
  overflow: hidden;
}
navigator{
  display:inline;
}
.list{
  margin-top:10px;
}
 
.list .list_item{
  margin-top:10px;
  padding:10px;
  height:100rpx;
  border-bottom:1px solid #E8E8E8;
  position: relative;
}
.list .list_item .img{
  float:left;
  width:15%;
  height:100%;
}
.list .list_item .img image{
   width:100%;
   height:100%;
   border-radius: 20rpx;
}
 
.list .list_item .info{
  width:80%;
  float:right;
  height:100rpx;
  position:relative;
}
.list .list_item .info .title{
  color:#333;
  margin-left:10px;
  font-size: 15px;
  font-weight: bold;
}
 
.list .list_item .info .price{
  color:#FF2727;
  margin-left:10px;
  margin-top:10px;
  font-size:15px;
}
 
.list .list_item .info .num{
  left:0px;
  bottom:10px;
  color:#747474;
  margin-left:10px;
  font-size:15px;
  display: flex;
  flex-flow: wrap;
}

.arrow-sty{
  position: absolute;
  top: 40%;
  right: 4%;
  width: 15rpx;
  height: 22rpx;
}

.qualifications-sty{
  padding: 8rpx 18rpx;
  background-color: #FFF1E7;
  color: #ff8a01;
  margin-right: 12rpx;
  margin-top: 2.5%;
  border-radius: 25rpx;
  font-size: 21rpx;
  font-weight: bold;
}