/* pages/search/index.wxss */
.search-box{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  position: fixed;
  z-index: 99;
  background: white;
  height: 90rpx;
}

.search-content{
  height: 80rpx;
  border-radius: 30rpx;
  background: #f8f8f9;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0rpx 100rpx;
  color: #bbbec4;
  position: relative;
  margin: 10rpx auto;
}

.search-content-mask{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0rpx;
  left: 0rpx;
  z-index: 2;
}

.search-input{
  width: 350rpx;
}

.normal-text{
  color: #778899;
}

.placeholder-text{
  color: gray;
}

.empty-zone{
  height: 90rpx;
  width: 100%;
}

.scroll-content{
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-top: 100rpx;
}

.panel-title-box{
  background: rgb(245, 245, 245);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  color: gray;
}

.panel-title{
  font-size: 30rpx;
  padding: 15rpx 25rpx;
}

.panel-detail{
  font-size: 35rpx;
  padding: 15rpx 25rpx;
}

.search-history-box{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
}

.search-history-item{
  padding: 10rpx 20rpx;
  font-size: 30rpx;
  border: 1rpx solid #778899;
  border-radius: 8rpx;
  margin: 5rpx 8rpx;
}

.result-item{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.result-item-image-box{
  width: 100rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.result-item-image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50% 50%;
}

.result-item-info-box{
  flex-grow: 1;
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.result-item-name{
  font-size: 32rpx;
  font-weight: bold;
  padding-left: 3%;
}