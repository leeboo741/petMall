.container-box{
  display: flex;
  flex-direction: column;
}
.special-row{
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}
.item-row{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 209rpx;
}
.special-item{
  width: 50%;
  align-items: center;
  justify-content: center;
  display: flex;
}

.special-item-content{
  position: relative;
  display: flex;
  flex-direction: column;
  width: 90%;
  height: 209rpx;
  border-radius: 25rpx;
  /* margin-bottom: 40rpx; */
  box-shadow: 0px 15px 10px -15px #9FA7B9;
}
.special-item-background{
  z-index: -1;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  width: 100%;
  height: 209rpx;
}

.special-item-name{
  margin: 15rpx 18rpx;
  font-size: 28rpx;
  color: #002241;
  flex-grow: 1;
}

.special-item-button{
  margin: 15rpx 18rpx;
  height: 40rpx;
  width: 120rpx;
  line-height: 40rpx;
  text-align: center;
  background: #FF3A1E;
  box-shadow: 0 6rpx 12rpx 0 rgba(56,67,89,0.20);
  border-radius: 14.43rpx;
  font-size: 18rpx;
  color: #FFFFFF;
}

.special-detail-box{
  display: flex;
  flex-direction: column;
  margin: 15rpx 0rpx;
}

.detail-up-row{
  display: flex;
  flex-direction: row;
}

.special-detail-up{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50%;
}

.special-detail-up-image{
  width: 30rpx;
  height: 30rpx;
}

.special-detail-content{
  display: flex;
  flex-direction: column;
  background: #FFFBF5;
  box-shadow: inset 0 1rpx 10rpx 0 rgba(113,121,133,0.20);
  border-radius: 40rpx;
  padding: 20rpx 30rpx;
  margin: 0rpx 20rpx;
}

.special-detail-item{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.special-detail-name{
  font-size: 30rpx;
  color: #384359;
  flex-grow: 1;
}

.special-detail-price{
  font-size: 24rpx;
  color: #717985;
}

.special-detail-button{
  width: 120rpx;
  height: 60rpx;
  background: #FF3A1E;
  border-radius: 20rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  margin-left: 20rpx;
}




.content-box{
  background: #fff;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.container {
    background: #fff;
}

.clear {
    clear: both;
}

.li {
    float: left;
    margin-left: 3.33%;
    width: 45%;
    border-radius: 25rpx;
    margin-bottom: 40rpx;
    box-shadow: 0px 15px 10px -15px #9FA7B9;
}

.li .main {
    position: relative;
    height: 209rpx;
}

.li .main image {
    display: block;
    width: 100%;
    height: 209rpx;
    border-radius: 25rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 100;
}

.li .main .name {
    font-size: 28rpx;
    color: #002241;
    top: 20rpx;
    left: 24rpx;
    z-index: 101;
    position: absolute;
}

.li .main .price {
    font-size: 24rpx;
    color: #384359;
    top: 64rpx;
    left: 24rpx;
    z-index: 101;
    position: absolute;
}

.li .main .btn {
    position: absolute;
    z-index: 101;
    bottom: 20rpx;
    left: 24rpx;
    height: 36.7rpx;
    line-height: 36.7rpx;
    text-align: center;
    width: 96.8rpx;
    background: #FF3A1E;
    box-shadow: 0 6rpx 12rpx 0 rgba(56,67,89,0.20);
    border-radius: 14.43rpx;
    font-size: 18rpx;
    color: #FFFFFF;
}

.list .details {
    width: 93.3%;
    margin-left: 3.33%;
    background: #FFFBF5;
    box-shadow: inset 0 1rpx 10rpx 0 rgba(113,121,133,0.20);
    border-radius: 40rpx;
    padding: 1rpx 0rpx 24rpx 0rpx;
    margin-bottom: 40rpx;
    position: relative;
}

.ls {
    position: absolute;
    top: -14rpx;
    height: 17rpx;
    width: 29rpx;
    left: 150rpx;
}

.ls image,.rs image {
    display: block;
    height: 100%;
    width: 100%;
}

.rs {
    position: absolute;
    top: -14rpx;
    height: 17rpx;
    width: 29rpx;
    right: 150rpx;
}

.list .details .lis {
    height: 84rpx;
    margin-top: 24rpx;
}

.list .details .lis .l {
    float: left;
    width: 45%;
    margin-left: 24rpx;
    margin-top: 2rpx;
}

.list .details .lis .l view {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.list .details .lis .c {
    float: right;
    text-align: right;
    width: 25%;
    margin-right: 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-top: 12rpx;
}

.list .details .lis .r {
    float: right;
    width: 120rpx;
    height: 60rpx;
    background: #FF3A1E;
    border-radius: 20rpx;
    line-height: 60rpx;
    text-align: center;
    color: #fff;
    font-size: 28rpx;
    margin-right: 24rpx;
    margin-top: 6rpx;
}

.list .details .lis .l .t {
    font-size: 30rpx;
    color: #384359;
}

.list .details .lis .l .b {
    font-size: 24rpx;
    color: #717985;
}