/* pages/assess/assessDetail/index.wxss */
.goods-box{
  display: flex;
  flex-direction: column;
}

.banner{
  width: 100%;
  height: 500rpx;
}

.banner-item{
  width: 100%;
  height: 100%;
}

.banner-item-image{
  width: 100%;
  height: 100%;
  display: inline-block;
}

.info-box{
  display: flex;
  flex-direction: column;
  box-shadow: 0rpx 0rpx 30rpx 5rpx #dad9d9;
}

.info-box-row{
  padding: 15rpx 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.info-title{
  font-size: 38rpx;
}

.info-detail{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
  color: lightgray;
}

.info-price{
  font-weight: bold;
  font-size: 36rpx;
  color: #ee2c2c;
  margin-left: 10rpx;
}

.assess-box{
  display: flex;
  flex-direction: column;
}

.assess-box-title-row{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 35rpx 25rpx 15rpx 25rpx;
}

.assess-box-title{
  font-size: 33rpx;
  font-weight: bold;
  margin-left: 20rpx;
}

.assess-item{
  padding: 15rpx 25rpx;
  display: flex;
  flex-direction: column;
}

.assess-item-content{
  display: flex;
  flex-direction: column;
}

.assess-item-row{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 15rpx;
}

.assess-item-title{
  font-size: 35rpx;
}

.assess-auth-logo{
  width: 80rpx;
  height: 80rpx;
}

.assess-auth-box{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 15rpx;
}

.assess-auth-name{
  font-size: 26rpx;
  color: gray;
}

.assess-time{
  font-size: 24rpx;
  color: lightgray;
}

.assess-item-content-content{
  display: flex;
  flex-direction: column;
  padding: 15rpx;
  margin: 15rpx;
  border-radius: 10rpx;
  box-shadow: 0rpx 0rpx 30rpx 5rpx #dad9d9;
  font-size: 26rpx;
}

.assess-evaluate-image-box{
  flex-grow: 1;
}

.bottom-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-grow: 1;
}

.order-button{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  line-height: 70rpx;
  height: 70rpx;
  text-align: center;
  width: 200rpx;
  border-radius: 35rpx;
  background: #ee2c2c;
  color: #fff;
  margin-right: 15rpx;
}

.order-button-title{
  font-size: 26rpx;
  margin-left: 8rpx;
}