/* pages/me/couponManager/index.wxss */

.coupon-item{
  width: 90%;
  min-height: 130rpx;
  margin: 25rpx auto;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 15rpx;
  box-shadow: 0px -2px 5px 2px #F4F4F4;
}

.coupon-value-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 25%;
}

.coupon-value{
  font-size: 36rpx;
  color: #ee2c2c;
  font-weight: bold;
}

.coupon-unit{
  font-size: 28rpx;
  color: #ee2c2c;
  margin-left: 5rpx;
}

.coupon-line-v{
  height: 90rpx;
  border-right: 1rpx solid #778899;
}

.coupon-info-box{
  display: flex;
  flex-direction: column;
  padding: 10rpx;
}

.coupon-info-name{
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.coupon-info-detail{
  font-size: 26rpx;
  color: gray;
  margin-bottom: 5rpx;
}

.coupon-info-expire{
  font-size: 23rpx;
  color: gray;
  margin-bottom: 5rpx;
}

.explain-box{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 90%;
  margin: 30rpx auto;
}

.explain-title-box{
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  width: 90%;
  margin: 10rpx auto;
}



.explain-title-bg-box{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0rpx;
  left: 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
}

.explain-title-bg-line{
  width: 100%;
  border-bottom: 2rpx solid #778899;
}

.explain-title-content{
  padding: 15rpx 50rpx;
  font-size: 30rpx;
  color: #778899;
  background: white;
  z-index: 2;
}

.explain-content{
  font-size: 24rpx;
  color: #778899;
}