/* pages/me/point/index.wxss */
.point-box{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 240rpx;
  background: #F7C84D;
  color: white;
}

.point-value{
  font-size: 45rpx;
  font-weight: bold;
}

.point-title{
  font-size: 30rpx;
}

.cell-header{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.cell-header-title{
  font-weight: bold;
  margin-left: 8rpx;
}

.share-button{
  width: 90%;
  margin: 20rpx auto;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 36rpx;
  letter-spacing: 3rpx;
  background: #F7C84D;
  color: white;
}