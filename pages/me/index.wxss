.userinfo-box{
  /* min-height: 411rpx; */
  display: flex;
  flex-direction: column;
}

.userinfo-base-box{
  min-height: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.avatar-box{
  margin: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.avatar-image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  z-index: 0;
}

.avatar-detail{
  position: absolute;
  bottom: 0rpx;
  width: 140rpx;
  left: 0rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 15rpx;
  font-size: 22rpx;
  background: #DAA520;
  color: white;
  text-align: center;
}

.info-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-grow: 1;
  justify-content: space-between;
}

.info-content-box{
  display: flex;
  flex-direction: column;
}

.info-content-box-sign-sty{
  width: 190rpx;
  height: 102rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.info-content-box-sign-image-sty{
  width: 100%;
  height: 70%;
}

.info-content-box-sign-content-sty{
  position: absolute;
  top: 70rpx;
  font-weight: bold;
  color: #FF4741;
}

.right-arrow{
  margin: 25rpx;
}

.info-title{
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.info-start-box{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.info-detail{
  font-size: 28rpx;
  color: gray;
}

.info-explain{
  font-size: 28rpx;
  color: #FFA500;
}

.userinfo-trade-volume-box{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 80%;
  min-height: 160rpx;
  margin: 15rpx auto;
  border-radius: 10rpx;
  background: linear-gradient(to right, rgb(255,147,87) , rgb(255, 51, 59));
  color: white;
}

.userinfo-trade-volume-value-box{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.userinfo-trade-volum-value{
