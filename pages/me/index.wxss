}

.userinfo-value-box{
  min-height: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userinfo-value-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-grow: 1;
}

.userinfo-value-item-value-box{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  margin-bottom: 10rpx;
}

.userinfo-value-item-value{
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 8rpx;
}

.userinfo-value-item-unit{
  font-size: 28rpx;
  color: gray;
}

.userinfo-value-item-name{
  font-size: 32rpx;
