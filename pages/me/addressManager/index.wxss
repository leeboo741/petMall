/* pages/me/addressManager/index.wxss */

.addnew-button{
  position: fixed;
  width: 100vw;
  bottom: 0rpx;
  left: 0rpx;
  height: 90rpx;
  font-size: 38rpx;
  color: white;
  background: linear-gradient(to right, rgb(255,147,87) , rgb(255, 51, 59));
  text-align: center;
}

.empty-zone{
  height: 90rpx;
  width: 100vw;
}

.address-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  min-height: 120rpx;
  padding: 15rpx 14rpx;
}

.address-item-info{
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}

.address-item-info-line{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 15rpx;
}

.address-item-info-name{
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 15rpx;
}

.address-item-info-phone{
  font-size: 28rpx;
  color: gray;
  margin-right: 15rpx;
}

.address-item-info-default{
  background: linear-gradient(to right, rgb(255,147,87) , rgb(255, 51, 59));
  text-align: center;
  height: 20rpx;
  line-height: 20rpx;
  border-radius: 20rpx;
  padding: 10rpx 25rpx;
  font-size: 20rpx;
  color: white;
}

.address-item-info-address{
  font-size: 28rpx;
  color: #778899;
}

.address-item-line-v{
  border-left: 2rpx solid gray;
  height: 70rpx;
  margin: auto 15rpx;
  flex-shrink: 0;
}

.address-item-button{
  flex-shrink: 0;
  width: 120rpx;
  min-height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.address-item-button-title{
  font-size: 32rpx;
  color: #778899;
}