.model-stypag{
  width: 600rpx;
  height: 700rpx;
  background-color: white;
  border-radius: 20rpx;
  z-index: 1000;
  display: flex;
  flex-flow: column;
}

.head-icon-wrong{
  display: flex;
  flex-direction: row-reverse;
  height: 100rpx;
  width: 100%;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}

.tips-image{
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;

}

.tips-box-image{
  width: 200rpx;
  height: 200rpx;

}

.tips-info{
  height:100rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
  font-size: 28rpx;

}

.tips-button{
  height: 160rpx;
  width: 100%;
  display: flex;
  flex-flow: nowrap;
  justify-content: center;
  align-items: center;
}

.tips-button-cancel{
  width: 200rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50rpx;
  background-color: #FF944D;
  color: white;
}

.tips-button-determine{
  width: 200rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50rpx;
  background-color: #FF944D;
  margin-left: 10%;
  color: white;
}

.foodgrainmore-head{
  width: 100%;
  height: 50px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  border-bottom: 2rpx solid #ccc;
  position: fixed;
  background: white;
  z-index: 3;
}

.select-item{
  flex-grow: 1;
  margin: 5rpx 10rpx;
  height: 35px;
  border-radius: 10rpx;
  background: rgb(250, 250, 250);
  padding: 5rpx 15rpx;
  display: flex;
  flex-direction: row;
}

.select-area{
  height: 35px;
  line-height: 35px;
  flex-grow: 1;
  width: 100%;
  text-align: right;
}

.placeholder-text{
  color: gray;
}

.normal-text{
  color: rgb(210, 210, 210);
}

.foodgrainmore-head-titleselect{
  width: 33.33%;
  height:100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  flex-direction: row;
}

.content-view{
  display: flex;
  flex-direction: column;
  padding: 50px 0px 0px 0px;
}

.item{
  display: flex;
  flex-direction: column;
}

.item-header{
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.item-number{
  width: 100%;
  font-size: 36rpx;
  color: #778899;
}

.item-time{
  width: 100%;
  font-size: 28rpx;
  color: lightgray;
  text-align: right;
}

.item-body{
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color: gray;
  margin-bottom: 20rpx;
}

.item-body-item{
  margin-bottom: 10rpx;
}

