}

.item-seller{

}

.item-price-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.item-price-original{
  color: black;
  margin-right: 20rpx;
}

.item-price-getamount{
  color: red;
  fong-size: 36rpx;
}