/**index.wxss**/

.search-box{
  margin: 10rpx auto;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.search-content{
  height: 80rpx;
  border-radius: 30rpx;
  background: #f8f8f9;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0rpx 100rpx;
  color: #bbbec4;
}

.search-input{
  width: 350rpx;
}

.banner{
  width: 100%;
  height: 360rpx;
}

.banner-item{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.banner-item-image{
  width: 100vw;
  height: 360rpx;
  margin: auto;
  border-radius: 10rpx;
  /* box-shadow: 0rpx 0rpx 40rpx 5rpx #b9b9b9; */
}

.fast-action-area{
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  width: 90%;
  margin: 35rpx auto;
}

.fast-action-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.fast-action-icon{
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx;
}

.fast-action-title{
  font-size: 26rpx;
  color: #778899;
}

.section-title-area{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 20rpx 15rpx;
  color: #778899;
}

.section-title{
  flex-shrink: 0;
  margin-left: 10rpx;
  font-size: 32rpx;
}

.section-info{
  flex-grow: 1;
  font-size: 32rpx;
}

.section-more{
  flex-shrink: 0;
  font-size: 28rpx;
}

.section-scroll-h{
  width: 100%;
  height: 320rpx;
  display: flex;
  flex-direction: row;
  padding: 0rpx;
}

.section-content-flex{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.section-foot-area{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-top: 1rpx solid lightgray;
}

.section-foot-button{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 25rpx;
}

.section-foot-title{
  font-size: 32rpx;
  margin-right: 20rpx;
}

.goods-item{
  width: 30%;
  margin: 15rpx 10rpx;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.goods-flex-item{
  width: 33.333333%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 15rpx 0rpx;
}

.goods-image-box{
  /* width: 100%; */
  height: 220rpx;
  border-radius: 10rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.goods-flex-image{
  width: 30vw;
  height: 220rpx;
}

.goods-image{
  width: 30vw;
  height: 220rpx;
}

.goods-info-box{
  width: 30vw;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.goods-info-line{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between
}

.setmenu-item{
  width: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin: 15rpx 0rpx;
}

.setmenu-item-content{
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.setmenu-item-info{
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}

.setmenu-item-icon{
  width: 100rpx;
  height: 100rpx;
}

.recommend-store-item{
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 15rpx 0rpx;
}

.recommend-store-logo-box{
  position: relative;
}

.recommend-store-logo{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}

.hot-type-item{
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 15rpx 0rpx;
}

.hot-type-icon{
  width: 100rpx;
  height: 100rpx;
}

.recommend-goods-item{
  width: 50%;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 15rpx 0rpx;
}

.recommend-goods-image-box{
  height: 320rpx;
  border-radius: 10rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.recommend-goods-image{
  width: 44vw;
  height: 320rpx;
}

.recommend-goods-store-logo{
  width: 30rpx;
  height: 30rpx;
}

.recommend-goods-info-box {
  width: 44vw;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.recomend-goods-store-name-box {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.text-name{
  font-size: 28rpx;
  font-weight: bold;
  color: #1c2438;
}

.text-price{
  color: #ee2c2c;
  font-size: 24rpx;
}

.text-info{
  color: #bbbec4;
  font-size: 22rpx;
}

.text-address{
  color: #bbbec4;
  font-size: 22rpx;
}

.text-original-price{
  color: #bbbec4;
  font-size: 22rpx;
  text-decoration: line-through;
}

.text-time {
  color: #bbbec4;
  font-size: 22rpx;
}

