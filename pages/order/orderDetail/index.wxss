/* pages/order/orderDetail/index.wxss */
.store-box{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.store-info{
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.store-logo-box{
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.store-logo{
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
}

.store-name{
  margin-left: 10rpx;
  font-weight: bold;
}

.store-line-v{
  height: 60rpx;
  border-left: 2rpx solid gray;
}

.store-call-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  text-align: center;
}

.store-call-title{
  margin-left: 10rpx;
}

.goods-box{
  display: flex;
  flex-direction: row;
}

.goods-image-box{
  width: 160rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.goods-image{
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

.goods-info-box{
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  margin-left: 10rpx;
}

.goods-info-line{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 8rpx;
}

.goods-info-name{
  font-size: 32rpx;
  font-weight: bold;
}

.goods-info-sexy{
  padding: 8rpx 10rpx;
  font-size: 30rpx;
  color: white;
  background: linear-gradient(to right, rgb(255,147,87) , rgb(255, 51, 59));
  border-radius: 8rpx;
  margin-left: 20rpx;
}

.goods-info-count{
  flex-grow: 1;
  text-align: right;
  color: orange;
}

.goods-info-price{
  color: #ee2c2c;
  font-size: 32rpx;
  font-weight: bold;
}

.price-box{
  display: flex;
  flex-direction: row;
}

.price-title-box{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.price-title{
  color: gray;
}

.price-content-box{
  margin-left: 15rpx;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}

.price-content-item{
  margin-bottom: 8rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.price-content-item-title{
  color: gray;
}

.price-content-item-value{
  color: orange;
}

.detail-box{
  display: flex;
  flex-direction: column;
}

.detail-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
}

.detail-title{
  width: 160rpx;
  color: gray;
}

.detail-value{
  flex-grow: 1;
  color: gray;
}