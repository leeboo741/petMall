/* pages/order/refundOrderList/refund/review.wxss */

.goods-box{
  display: flex;
  flex-direction: column;
}

.order-info-box{
  padding: 10rpx 15rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.order-info-number{
  font-size: 35rpx;
  font-weight: bold;
  color: #778899;
}

.order-info-time{
  font-size: 26rpx;
  color: gray;
}

.order-goods-box{
  margin: 15rpx;
  border-radius: 8rpx;
  box-shadow: 0px -2px 5px 2px #F4F4F4;
}

.order-goods-item{
  margin: 15rpx 10rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.order-goods-image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin: 15rpx;
}

.order-goods-info{
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  margin: 15rpx;
}

.order-goods-item-line{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 15rpx;
}

.order-goods-name{
  color: #778899;
  font-size: 35rpx;
  font-weight: bold;
}

.order-goods-sexy{
  padding: 8rpx 10rpx;
  font-size: 30rpx;
  color: white;
  background: linear-gradient(to right, rgb(255,147,87) , rgb(255, 51, 59));
  border-radius: 8rpx;
  margin-left: 20rpx;
}

.order-goods-count{
  font-size: 30rpx;
  color: orange;
}

.order-goods-price{
  font-size: 27rpx;
  color: gray;
}

.order-goods-amount{
  font-size: 32rpx;
  color: #ee2c2c;
  font-weight: bold;
}

.reason-input{
  width: 500rpx;
  background: rgb(245, 245, 245);
  padding: 10rpx;
}

.normal-text{
  color: #778899;
}

.placeholder-text{
  color: gray;
}

.upload-image-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
}

.upload-image-item{
  width: 33.3333333%;
  height: 200rpx;
}

.upload-image-item-image{
  background: rgb(235, 235, 235);
  width: 95%;
  height: 97%;
  margin: auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-image-item-center{
  width: 120rpx;
  height: 120rpx;
}

.empty-zone{
  height: 90rpx;
  width: 100%;
}

.button-area{
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  height: 90rpx;
}

.reject-button{
  width: 45%;
  color: rgb(255,147,87);
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  border: 1rpx solid rgb(255,147,87);
}

.approve-button{
  width: 45%;
  color: white;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  background:  linear-gradient(to right, rgb(255,147,87) , rgb(255, 51, 59));
}


