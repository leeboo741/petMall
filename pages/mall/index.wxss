/* pages/mall/index.wxss */

.banner{
  width: 100%;
  height: 360rpx;
}

.banner-item{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.banner-item-image{
  width: 100vw;
  height: 360rpx;
  margin: auto;
  border-radius: 10rpx;
  /* box-shadow: 0rpx 0rpx 40rpx 5rpx #b9b9b9; */
}

.scroll-view-page{
  width: 100%;
  height: 180rpx;
}

.fast-action-area{
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  width: 100%;
  margin: 35rpx auto;
}

.fast-action-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  /* width: 40%; */
  flex-grow: 1;
}

.fast-action-icon{
  width: 100rpx;
  height: 100rpx;
  margin: 10rpx;
  border-radius: 20rpx;
}

.fast-action-title{
  font-size: 26rpx;
  color: #778899;
}

