/* .brand-body */
 .section-title-area{   /**/
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 15rpx;
  color: #778899;
}

.section-title{
  flex-shrink: 0;
  margin-left: 10rpx;
  font-size: 32rpx;
}

.section-info{
  flex-grow: 1;
  font-size: 32rpx;
}

.section-more{
  flex-shrink: 0;
  font-size: 28rpx;
}

.section-scroll-h{
  width: 100%;
  height: 320rpx;
  display: flex;
  flex-direction: row;
  padding: 0rpx;
}

.section-content-flex{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.section-foot-area{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-top: 1rpx solid lightgray;
}

.section-foot-button{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 25rpx;
}

.section-foot-title{
  font-size: 32rpx;
  margin-right: 20rpx;
}

.goods-item{
  width: 30%;
  margin: 15rpx 10rpx;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.goods-flex-item{
  width: 33.333333%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.goods-image-box{
  /* width: 100%; */
  height: 220rpx;
  border-radius: 10rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.goods-flex-image{
  width: 30vw;
  height: 220rpx;
}

.goods-image{
  width: 30vw;
  height: 220rpx;
}

.goods-info-box{
  width: 30vw;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.goods-info-line{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between
}

.setmenu-item{
  width: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin: 20rpx 0;
}

.setmenu-item-content{
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.setmenu-item-info{
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}

.setmenu-item-icon{
  width: 100rpx;
  height: 100rpx;
}

.text-info{
  color: #bbbec4;
  font-size: 22rpx;
}

.text-name{
  font-size: 28rpx;
  font-weight: bold;
  color: #1c2438;
}


.brand-page{
 width: 100%;
 display: flex;
 flex-direction: row;
 flex-wrap: wrap;
}

.brand-body-content{
 width: 24.5%;
 height: 50%;
 display: flex;
 align-items: center;
 justify-content: center;
 flex-direction:column;
 margin: 25rpx 0rpx;
}

.brand-body-content-image{
 width: 140rpx;
 height: 140rpx;
 display: flex;
 align-items: center;
 justify-content: center;
}

.brand-body-content-text{
 width: 100%;
 height: 30%;
 display: flex;
 align-items: center;
 justify-content: center;
