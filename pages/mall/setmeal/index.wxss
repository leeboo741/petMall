/* pages/mall/setmeal/index.wxss */

.setmeal-head{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.setmeal-selectinfo{
  width: 25%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
}

.scroll-view-page{
  width: 100%;
  overflow: hidden;
}



.foodgrain-page{
 width: 100%;
 display: flex;
 flex-direction: row;
 flex-wrap: wrap;
}

.foodgrain-page-formation{
  width: 50%;
  display: flex;
  flex-direction:column;
  align-items: center;
  justify-content: center;
}

.foodgrain-page-formation-head{
 width:100%;
 height: 200rpx;
 display: flex;
 align-items: center;
 justify-content: center;
}

.foodgrain-page-formation-middle{
 width:100%;
 height: 40rpx;
 display: flex;
 align-items: center;
 justify-content: center;
 font-size: 23rpx;
}

.foodgrain-page-formation-introduce{
 width:100%;
 height: 40rpx;
 display: flex;
 align-items: center;
 justify-content: center;
 font-size: 23rpx;
 color: #ccc;
}

.foodgrain-page-formation-down{
 width:80%;
 height: 40rpx;
 display: flex;
 align-items: center;
 justify-content: space-between;
 font-size: 26rpx;
 color: #ED630A;
}
.foodgrain-page-formation-down-left{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.foodgrain-page-formation-down-price{
 font-size: 26rpx;
 color: #ED630A;
}

.foodgrain-page-formation-down-member{
  border:1rpx solid #ED630A;
  font-size: 20rpx;
  border-radius:6rpx;
}

.foodgrain-page-formation-down-originalPrice{
  color: #ccc;
  text-decoration: line-through;
  justify-content: flex-end;
}
