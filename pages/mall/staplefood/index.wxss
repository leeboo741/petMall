/* pages/mall/ff/index.wxss */

.foodgrainmore-head{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 2rpx solid #ccc;
}

.foodgrainmore-head-titleselect{
  width: 33.33%;
  height:100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  flex-direction: row;
}



.foodgrain-page{
 width: 100%;
 height: 650rpx;
 display: flex;
 flex-direction: row;
 flex-wrap: wrap;
}

.foodgrain-page-formation{
  width: 49.5%;
  height: 50%;
  display: flex;
  flex-direction:column;
  align-items: center;
  justify-content: center;
}

.foodgrain-page-formation-head{
 width:100%;
 height: 60%;
 display: flex;
 align-items: center;
 justify-content: center;
}

.foodgrain-page-formation-middle{
 width:100%;
 height: 13.333%;
 display: flex;
 align-items: center;
 justify-content: center;
 font-size: 23rpx;
}

.foodgrain-page-formation-introduce{
 width:100%;
 height: 13.333%;
 display: flex;
 align-items: center;
 justify-content: center;
 font-size: 23rpx;
 color: #ccc;
}

.foodgrain-page-formation-down{
 width:100%;
 height: 13.333%;
 display: flex;
 flex-wrap: wrap;
 align-items: center;
 justify-content: center;
 font-size: 26rpx;
 color: #ED630A;
}

.foodgrain-page-formation-down-member{
  border:1rpx solid #ED630A;
  font-size: 20rpx;
  border-radius:6rpx;
}

.dropdownbox-infomation{
  position: absolute; 
  display: flex;
  flex-direction:column;
  width: 100%;
  top:262rpx;
  background-color:white;
  z-index: 2;
}

.dropdownbox-infomation-table{
  height: 80rpx;
  display: flex;
  justify-content: center;
  flex-direction:column;
  border-bottom: 1rpx solid #ccc;
  padding-left: 5%;
  
}
