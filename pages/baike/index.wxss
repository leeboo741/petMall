.content{
  display: flex;
  align-items: center;
  justify-content: center;
}

.content-button-box{
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.content-button{
  width: 200rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  font-size: 28rpx;
  background: white;
  border-radius: 15rpx;
  box-shadow: 0rpx 0rpx 30rpx 5rpx #dad9d9;
}

.content-button-image{
  width: 140rpx;
  height: 140rpx;
}

