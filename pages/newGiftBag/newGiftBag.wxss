/* pages/receiveCouponList/receiveCouponList.wxss */
.coupon-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border: 1rpx solid rgb(221, 220, 220);
}

.coupon-item-content{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.coupon-item-header{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  padding: 8rpx 15rpx;
  border-radius: 10rpx;
}

.coupon-item-value{
  font-size: 46rpx;
  color: #ee2c2c;
  font-weight: bolder;
  margin-right: 15rpx;
}

.coupon-item-unit{
  font-size: 35rpx;
  font-weight: bolder;
}

.coupon-item-least{
  flex-grow: 1;
  text-align: right;
  color: lightgray;
  font-size: 28rpx;
}

.coupon-item-content{
  padding: 8rpx 15rpx;
  display: flex;
  flex-direction: column;
}

.coupon-item-title{
  font-size: 45rpx;
  color: gold;
}

.coupon-item-footer{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 8rpx 15rpx;
}

.coupon-item-info{
  font-size: 26rpx;
  color: lightgray;
}