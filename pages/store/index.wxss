/* pages/store/index.wxss */

.scrollview-page{
  width: 100%;
}

.foodgrainmore-head{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 2rpx solid #ccc;
}

.foodgrainmore-head-titleselect{
  width: 33.33%;
  height:100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  flex-direction: row;
}

.mask-page{
  position: fixed; 
  top:244rpx;
  width: 100%;
  height: 85vh;
  background:black;
  z-index: 2;
  opacity:0.7;
}

.scroll-view-page{
  width: 100%;
  height: 200rpx;
  
}

.recommended-page{
  height:200rpx;
  width: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin-left: 3%;
}

.recommended-head-page{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50% 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.recommended-bottom-page{
  height:80rpx;
  width:150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
}

.merchant-information-page{
  width: 100%;
  height: 450rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 2%;
}

.merchant-information-head-page{
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-wrap: nowrap;
}

.merchant-information-head-left{
  width: 20%;
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.merchant-information-head-leftimage{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50% 50%;
}


.merchant-information-head-middle{
  width: 60%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.merchant-information-head-right{
  width: 20%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.merchant-information-bottom-page{
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-wrap: nowrap;
}


.merchant-information-bottom-doginformation{
  width: 33.33%;
  height:300rpx;
  display: flex; 
  flex-direction: column;
  align-items: center;
}

.merchant-information-bottom-dogimage{
  width: 230rpx;
  height: 230rpx;
  border-radius: 20rpx;
}


.stars-page{
  display: flex;
  flex-wrap: nowrap;
}

.select-address-page{
  position: fixed; 
  top:230rpx;
  width: 100%;
  height: 85vh;
  z-index: 2;
  background-color: white;
  overflow: hidden;
}

.searchLetter {
  position: fixed;
  right: 0;
  width: 50rpx;
  text-align: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
  color: #666;
  z-index: 1;
}

.searchLetter view {
  margin-top: 20rpx;
}

.touchClass {
  background-color: #fff;
  color: #fff;
  padding-top: 46rpx;
}

.showSlectedLetter {
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 50%;
  left: 50%;
  margin: -100rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  font-size: 52rpx;
  z-index: 1;
}

.selection {
  display: flex;
  width: 100%;
  flex-direction: column;
  margin-top: 10rpx;
}

.item_letter {
  display: flex;
  background-color: #f5f5f5;
  height: 40rpx;
  padding-left: 34rpx;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.item_city {
  display: flex;
  background-color: #fff;
  height: 100rpx;
  padding-left: 34rpx;
  align-items: center;
  border-bottom: 1rpx solid #ededed;
  font-size: 24rpx;
  color: #666;
}

.hotcity-common {
  font-size: 24rpx;
  color: #666;
  padding: 0 0 0 30rpx;
}

.thisCity {
  padding-top: 30rpx;
}

.thisCityName {
  display: inline-block;
  border: 1rpx solid #2ab4ff;
  border-radius: 8rpx;
  padding: 10rpx 0;
  font-size: 24rpx;
  color: #2ab4ff;
  text-align: center;
  min-width: 149.5rpx;
  margin: 20rpx 0 20rpx 30rpx;
}

.thishotText {
  color: #2ab4ff;
  font-size: 20rpx;
  margin: 0 !important;
}

.slectCity {
  border-color: #2ab4ff !important;
}

.slectCity view {
  color: #2ab4ff !important;
}

.weui-grid {
  position: relative;
  float: left;
  padding: 10rpx 0;
  width: 149.5rpx;
  box-sizing: border-box;
  border: 1rpx solid #ececec;
  border-radius: 8rpx;
  margin: 10rpx 12rpx;
}

.weui-grid__label {
  display: block;
  text-align: center;
  color: #333;
  font-size: 24rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.dropdownbox-infomation{
  position: fixed; 
  display: flex;
  flex-direction:column;
  width: 100%;
  top:15%;
  background-color:white;
  z-index: 3;
}

.dropdownbox-infomation-table{
  height: 80rpx;
  display: flex;
  justify-content: center;
  flex-direction:column;
  border-bottom: 1rpx solid #ccc;
  padding-left: 5%;
  
}