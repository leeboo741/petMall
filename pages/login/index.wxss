/* pages/login/index.wxss */
page{
  background: rgb(242, 244, 246);
}
.page-box-full{
  width: 100vw;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.content-box{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.avatar-box{
  height: 220rpx;
  width: 220rpx;
  border-radius: 110rpx;
  overflow: hidden;
}

.avatar{
  height: 220rpx;
  width: 220rpx;
}

.nick-name{
  font-size: 38rpx;
  color: #778899;
  margin-top: 30rpx;
}

.login-button{
  margin-top: 60rpx;
  width:100rem;
  font-size: 35rpx;
  color: #778899;
}

.container {
    width: 100%;
    margin: 0;
    padding: 0;
    position: relative;
    background-color: #f4f6f8;
}

.bgc {
    width: 100%;
    height: 767rpx;
    justify-content: center;
    align-items: center;
    display: flex;
}

.bgc image {
    width: 60%;
    height: 60%;
}

