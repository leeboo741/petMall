/* pages/poststation/order/index.wxss */

.order-header-box{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1;
}
.order-header-content-box{
  display: flex;
  flex-direction: column;
  width: 80%;
  height: 80%;
  margin: 30rpx 10rpx;
}

.order-header-content-business{
  font-size: 38rpx;
  font-weight: bold;
  margin: 20rpx 15rpx;
}

.order-header-content-service-box{
  flex-grow: 1;
  border-radius: 35rpx;
  background: white;
  display: flex;
  flex-direction: column;
  min-height: 200rpx;
  position: relative;
  box-shadow: 0px 15px 10px -15px #9FA7B9;
}

.order-header-content-service-name{
  margin: 15rpx 25rpx;
  font-size: 38rpx;
  font-weight: bold;
}

.order-header-content-service-content{
  display: flex;
  flex-direction: row;
}

.order-header-content-service-content-name{
  font-size: 32rpx;
  margin: 15rpx 25rpx;
  width: 35%;
}

.order-header-content-service-content-price{
  font-size: 26rpx;
  font-weight: bold;
  width: 35%;
  margin: 15rpx 0rpx;
}

.order-header-content-service-icon-box{
  position: absolute;
  right: 40rpx;
  top: -50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 35rpx;
  width: 150rpx;
  height: 150rpx;
  background: white;
}

.order-header-content-service-icon{
  width: 120rpx;
  height: 120rpx;
  border-radius: 35rpx;
}

.order-service-param-select-area{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50rpx;
  z-index: 1;
}

.order-service-param-select-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 80%;
  background: white;
  padding: 25rpx;
  border-radius: 18rpx;
  box-shadow: 0px 15px 10px -15px #9FA7B9;
  margin: 25rpx;
}

.order-service-param-select-item-icon{
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
}

.order-service-param-select-item-title{
  font-size: 30rpx;
  color: #778899;
  margin-left: 20rpx;
}

.button{
  position: fixed;
  z-index: 1;
  background: #FF3A1E;
  color: white;
  bottom: 0rpx;
  left: 0rpx;
  right: 0rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}